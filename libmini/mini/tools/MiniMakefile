SHELL	= sh

PRGS	= eval expr\
	  raw2db db2db dbgzip dbdump dds\
	  raw2iso geo2ply\
	  test mpfptest

SRCS	= $(PRGS:=.cpp)
OBJS	= $(PRGS:=.o)

RM	= rm -rf

.SUFFIXES: .cpp

.cpp.o:
	$(COMPILER) $(OPTS) -I.. -I../.. -c $*.cpp
	$(COMPILER) $(OPTS) -o $* $*.o -L.. -lMiniSFX -lMini $(LINK) -ljpeg -lpng -lz -lGL -lGLU -lm

trap:

all:	$(OBJS)

clean:
	@-$(RM) $(OBJS) ii_files

tidy:	clean
	@-$(RM) *~
	@-$(RM) CMakeCache.txt CMakeFiles Makefile cmake_install.cmake
	@-$(RM) $(PRGS)
