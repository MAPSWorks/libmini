SHELL	= sh

PRGS	= db2db eval\
	  mpfptest\
	  test

SRCS	= $(PRGS:=.cpp)
OBJS	= $(PRGS:=.o)

RM	= rm -rf

.SUFFIXES: .cpp

.cpp.o:
	$(COMPILER) $(OPTS) -I.. -I../.. -c $*.cpp
	$(COMPILER) $(OPTS) -o $* $*.o -L.. -lMiniSFX -lMini $(LINK) -ljpeg -lpng -lGL -lGLU -lm

trap:

all:	$(OBJS)

clean:
	@-$(RM) $(OBJS) ii_files

tidy:	clean
	@-$(RM) *~
	@-$(RM) CMakeCache.txt CMakeFiles MakeFile cmake_install.cmake
	@-$(RM) $(PRGS)
